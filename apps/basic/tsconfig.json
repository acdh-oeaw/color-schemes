{
	"$schema": "https://www.schemastore.org/tsconfig",
	"extends": "@acdh-oeaw/tsconfig",
	"compilerOptions": {
		"jsx": "react-jsx",
		"paths": {
			"@/*": ["./*"],
			"content/*": ["./.content/generated/*"]
		},
		"plugins": [{ "name": "next" }]
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": [".content", ".next", "content", "node_modules", "public"]
}
