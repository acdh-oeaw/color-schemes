{
	"name": "@acdh-oeaw/color-schemes",
	"version": "0.0.3",
	"license": "MIT",
	"repository": {
		"url": "https://github.com/acdh-oeaw/color-schemes"
	},
	"type": "module",
	"devEngines": {
		"runtime": {
			"name": "node",
			"version": "^24",
			"onFail": "download"
		}
	},
	"packageManager": "pnpm@10.24.0",
	"sideEffects": false,
	"files": [
		"dist"
	],
	"exports": {
		".": "./dist/index.mjs"
	},
	"scripts": {
		"build": "tsdown",
		"format:check": "prettier . --cache --cache-location ./../../.prettiercache --check",
		"format:fix": "prettier . --cache --cache-location ./../../.prettiercache --check --write",
		"lint:check": "eslint .",
		"lint:fix": "eslint . --fix",
		"prepublishOnly": "run-s build",
		"types:check": "tsc --noEmit",
		"test": "exit 0"
	},
	"devDependencies": {
		"@acdh-oeaw/eslint-config": "catalog:",
		"@acdh-oeaw/prettier-config": "catalog:",
		"@acdh-oeaw/tsconfig-lib": "catalog:",
		"eslint": "catalog:",
		"eslint-config-flat-gitignore": "catalog:",
		"globals": "catalog:",
		"npm-run-all2": "catalog:",
		"prettier": "catalog:",
		"tsdown": "catalog:",
		"typescript": "catalog:"
	},
	"lint-staged": {
		"*.@(js|ts)": [
			"eslint --fix",
			"prettier --cache --cache-location ./../../.prettiercache --write"
		],
		"*.!(js|ts)": "prettier --cache --cache-location ./../../.prettiercache --ignore-unknown --write"
	},
	"prettier": "@acdh-oeaw/prettier-config"
}
